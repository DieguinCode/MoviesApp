<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.text.Font?>
<HBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      alignment="CENTER" spacing="10" fx:controller="com.example.strategypattern.MovieSearchSceneController">

    <!-- Search Field Label -->
    <Label text="Search Field">
        <font>
            <Font name="Arial" size="14"/>
        </font>
    </Label>

    <!-- Text Field -->
    <TextField fx:id="searchField" prefWidth="200"/>

    <!-- Search Button -->
    <Button fx:id="enterButton" text="Search"/>
</HBox>
