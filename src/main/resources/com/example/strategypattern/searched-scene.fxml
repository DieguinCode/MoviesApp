<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.strategypattern.MovieSearchedSceneController">
    <ImageView fx:id="moviePoster" fitHeight="300" fitWidth="200" layoutX="20" layoutY="50"/>

    <Label fx:id="movieTitle" layoutX="250" layoutY="50" />
    <Label fx:id="movieActors" layoutX="250" layoutY="100" />
    <Label fx:id="movieYear" layoutX="250" layoutY="150" />
    <Label fx:id="movieRank" layoutX="250" layoutY="200" wrapText="true" prefWidth="300"/>

    <Button fx:id="previousButton" text="Previous" layoutX="20" layoutY="400"/>
    <Button fx:id="nextButton" text="Next" layoutX="480" layoutY="400"/>
</AnchorPane>
